n1, n2=map(int, input().split())
print("1 – addition \n 2 – subtraction \n 3 – multiplication \n 4 – division \n 5 – modulus \n 6 – average \n 7 – power ")
c=int(input("Enter your choice: "))
if c==1:
    print(n1+n2)
elif c==2:
    print(n1-n2)
elif c==3:
    print(n1*n2)
elif c==4:
    print(n1/n2)
elif c==5:
    print(n1%n2)
elif c==6:
    print((n1+n2)/2)
elif c==2:
    print(n1**n2)
